//@version=5
// Use the Price & Indicator Series
indicator("Price & Indicator Series", precision = 1)
candleOpen = open
candleHigh = high
candlelow = low
candleClose = close

//analize price data
candleSize = high - low
candleSize10 = high[10] - low[10]//10 historical bars ago
candleSizeRatio = candleSize / candleSize10

atr = ta.atr(14)// El indicador ATR sirve para medir la volatilidad de los precios y así estimar su movimiento.
atr10 = atr[10]
atrRatio = atr / atr10 


//draw candle data into our chart
plot(candleOpen, color=color.blue)
plot(candlelow, color=color.red)
plot(candleHigh, color=color.green)
plot(candleClose, color=color.purple)
plot(candleSize,color= color.orange)
plot(candleSizeRatio, color= color.purple)
plot(atr[10],color = color.white)
plot(volume[0],color=color.gray)
plot(atrRatio, color=color.fuchsia)
