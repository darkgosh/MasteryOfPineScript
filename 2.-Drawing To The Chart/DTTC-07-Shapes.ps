indicator("PSMC - Shapes", overlay = true)
higherClose = close > high[1]//creacion de Variable 
lowerClose = close < low[1]

plotshape(
  higherClose,
  title = "Higher Close" ,//Titulo dentro de la configuracion del indicador
  color = color.green,//Define el color
  style = shape.triangleup, //Tipo de icono que va mostrar
  location = location.belowbar, // ubicacion de la vela
  text= "HC", //Escribir Texto en la vela
  textcolor= color.white, //Color del texto de la vela
  editable = true, // Permite o Niega editar parametros entrando en el gear de la configuracion del indicador
  size = size.small  // Permite cambiar el tamaño del icono, por defaul esta en size.auto, este se ajusta segun la temporalidad
  )

plotshape(
  lowerClose, 
  title = "Lower Close",
  color = color.red,
  style = shape.triangledown,
  text = "LC",
  textcolor = color.purple, editable = true
  )

