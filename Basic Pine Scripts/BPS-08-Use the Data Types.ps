// Use the Data Types
indicator("Data Types", precision = 1)

integerType = 20
floatType = 33.3
floatTypeE = 0.1e2
boolType = true
//colorType = color.red //also can use #ff0000
colorType = color.rgb(0,255,0,100) // can use RGB colors
stringType = "Text"// also works with single quotes''
stringType2 = 'Text\'s bullshit'//para usr el apostrofe S cuando estas escribiendo en ingles y escriba la comita.

if boolType //apply condition when ColorType is TRUE
    colorType:= color.red // := is used to overwrite colorType to red

plot(integerType, color = colorType)
plot(floatType, color = color.white)
plot(floatTypeE, color = color.aqua)


